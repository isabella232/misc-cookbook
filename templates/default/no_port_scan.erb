# Setup our hitcount rule
#
-A FWR -p TCP --dport <%= @port %> -m state --state NEW -m recent --set
-A FWR -p TCP --dport <%= @port %> -m state --state NEW -m recent --update --seconds <%= @window %> --hitcount <%= @max_conns %> -j DROP

# By default, we need to allow this traffic
#
-A FWR -p TCP --dport <%= @port %> -j ACCEPT
